package stepDefinitions;

import java.util.Iterator;
import java.util.Set;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;

import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;
import pageObjects.HomePage;
import pageObjects.OffersPage;

public class SearchProductStepDef {
	
	WebDriver driver;
	String productNameOnHomePage;
	String productShortName;
	
	@Given("user on the GreenKart landing page")
	public void user_on_the_green_kart_landing_page() {
		driver = new ChromeDriver();
		driver.manage().window().maximize();
		driver.get("https://rahulshettyacademy.com/seleniumPractise");
	}

	@When("user searches with shortname {string} and extracts the name of the product")
	public void user_searches_with_shortname_and_extracts_the_name_of_the_product(String productShortName) {
		this.productShortName = productShortName;
		HomePage homePage = new HomePage(driver);
		homePage.enterTextOnSearchProductInputTextBox(productShortName);
		homePage.clickSearchButton();
		productNameOnHomePage = homePage.getNameOfProuctOnTheProductCard().split("-")[0].trim();
		Assert.assertTrue(productNameOnHomePage.contains(productShortName));
	}

	@Then("user searches same shortname on offers page to validate {string} exists or not")
	public void user_searches_same_shortname_on_offers_page_to_validate_exists_or_not(String productName) {
		OffersPage offersPage = new OffersPage(driver);
		offersPage.clickTopDealsButton();
		Set<String> tabs = driver.getWindowHandles();
		Iterator iterator = tabs.iterator();
		String parentTab = (String) iterator.next();
		String childTab = (String) iterator.next();
		driver.switchTo().window(childTab);
		offersPage.enterTextOnSearchProductInputTextBox(productShortName);
		String productNameOnOfferPage = offersPage.getProductNameFromOfferPage(productName);
		Assert.assertEquals(productNameOnOfferPage, productNameOnHomePage);
		driver.quit();
	}


}
